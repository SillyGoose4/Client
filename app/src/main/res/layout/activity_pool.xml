<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_night"
    tools:context="com.SillyGoose.Activity.PoolActivity">


    <ImageButton
        android:id="@+id/btn_airplane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_trip"
        android:stateListAnimator="@drawable/btn_trip"
        />

    <ImageButton
        android:id="@+id/btn_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_toEndOf="@+id/btn_rain"
        android:adjustViewBounds="true"
        android:background="@drawable/btn_wind"
        android:stateListAnimator="@drawable/btn_wind"
        />

    <ImageButton
        android:id="@+id/btn_devil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btn_moon"
        android:background="@drawable/btn_devil"
        android:stateListAnimator="@drawable/btn_devil"
        />

    <ImageButton
        android:id="@+id/btn_cloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btn_album"
        android:background="@drawable/btn_cloud"
        android:stateListAnimator="@drawable/btn_cloud"
        />

    <ImageButton
        android:id="@+id/btn_moon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btn_cloud"
        android:background="@drawable/btn_moon"
        android:stateListAnimator="@drawable/btn_moon"
        />

    <ImageButton
        android:id="@+id/btn_rain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:background="@drawable/btn_rain"
        android:stateListAnimator="@drawable/btn_rain"
        />

    <ImageButton
        android:id="@+id/btn_sun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/btn_sun"
        android:stateListAnimator="@drawable/btn_sun"
        />

    <ImageButton
        android:id="@+id/btn_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/btn_album"
        android:stateListAnimator="@drawable/btn_album"
        />

    <ImageButton
        android:id="@+id/btn_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/btn_return"
        android:stateListAnimator="@drawable/btn_return"
        />

</RelativeLayout>
