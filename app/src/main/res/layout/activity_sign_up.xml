<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="connect.database.test.com.clents.SignUpActivity">

    <TextView
        android:id="@+id/text_UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="27dp"
        android:text="用户名" />

    <EditText
        android:id="@+id/edit_UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_UserName"
        android:layout_alignBottom="@+id/text_UserName"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edit_verPasswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edit_Passwd"
        android:layout_below="@+id/edit_Passwd"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/edit_Passwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_alignBaseline="@+id/text_Passwd"
        android:layout_alignBottom="@+id/text_Passwd"
        android:layout_alignStart="@+id/edit_UserName" />

    <TextView
        android:id="@+id/text_CheckPasswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/text_Passwd"
        android:layout_below="@+id/edit_Passwd"
        android:layout_marginTop="23dp"
        android:text="确认密码" />

    <TextView
        android:id="@+id/text_Passwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/text_UserName"
        android:layout_below="@+id/edit_UserName"
        android:layout_marginTop="24dp"
        android:text="密码"
        tools:ignore="HardcodedText" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:layout_below="@+id/edit_verPasswd"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/text_Phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="32dp"
            android:text="@string/SignUp_phone" />

        <EditText
            android:id="@+id/exit_Phone"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            android:layout_alignBaseline="@+id/text_Phone"
            android:layout_alignBottom="@+id/text_Phone"
            android:layout_toEndOf="@+id/text_Phone"
            android:layout_marginStart="30dp" />

        <TextView
            android:id="@+id/text_Check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/text_Phone"
            android:layout_below="@+id/exit_Phone"
            android:layout_marginTop="45dp"
            android:text="@string/SignUp_check" />

        <EditText
            android:id="@+id/edit_CheckCode"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/exit_Phone"
            android:layout_below="@+id/exit_Phone"
            android:layout_marginTop="28dp"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:id="@+id/btn_getCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/edit_CheckCode"
            android:layout_marginStart="23dp"
            android:layout_toEndOf="@+id/edit_CheckCode"
            android:elevation="0dp"
            android:text="获取验证码" />

        <Button
            android:id="@+id/btn_SignUp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_CheckCode"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:text="注册" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="13dp">


        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>