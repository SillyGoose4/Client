<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/airport"
    tools:context="com.SillyGoose.Activity.TripActivity">

    <ImageButton
        android:id="@+id/btn_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"

        android:layout_x="341dp"
        android:layout_y="0dp"
        android:background="@drawable/btn_album" />

    <ImageButton
        android:id="@+id/btn_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/btn_return"
        />

    <ImageButton
        android:id="@+id/btn_centralchina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="209dp"
        android:layout_y="295dp"
        android:background="@drawable/btn_huazhong" />

    <ImageButton
        android:id="@+id/btn_northeast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_huadong"
        android:layout_alignTop="@+id/btn_huabei"
        android:layout_marginStart="18dp"
        android:layout_x="266dp"
        android:layout_y="168dp"
        android:background="@drawable/btn_dongbei" />

    <ImageButton
        android:id="@+id/btn_northchina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="16dp"
        android:layout_marginTop="39dp"
        android:layout_x="155dp"
        android:layout_y="175dp"
        android:background="@drawable/btn_huabei" />

    <ImageButton
        android:id="@+id/btn_eastchina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_huazhong"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_x="239dp"
        android:layout_y="280dp"
        android:background="@drawable/btn_huadong" />

    <ImageButton
        android:id="@+id/btn_southchina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="30dp"
        android:layout_x="187dp"
        android:layout_y="361dp"
        android:background="@drawable/btn_huanan" />


    <ImageButton
        android:id="@+id/btn_southwest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/btn_xibei"
        android:layout_alignTop="@+id/btn_xibei"
        android:layout_marginTop="30dp"
        android:layout_x="37dp"
        android:layout_y="282dp"
        android:background="@drawable/btn_xinan" />

    <ImageButton
        android:id="@+id/btn_northwest"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_album"
        android:layout_marginStart="26dp"
        android:layout_marginTop="82dp"
        android:layout_x="25dp"
        android:layout_y="194dp"
        android:background="@drawable/btn_xibei"
        android:clickable="true"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/btn_tgooseEny"
        android:layout_width="200px"
        android:layout_height="100px"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_rain"
        android:layout_x="270dp"
        android:layout_y="537dp" />

    <TextView
        android:id="@+id/tgooseEny"
        android:layout_width="200px"
        android:layout_height="100px"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_gooseEny"
        android:layout_x="164dp"
        android:layout_y="3dp"
        android:background="@drawable/moneypackge"
        android:fontFamily="sans-serif-condensed"
        android:lineSpacingExtra="10sp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="30sp"
        android:typeface="monospace" />
</AbsoluteLayout>
